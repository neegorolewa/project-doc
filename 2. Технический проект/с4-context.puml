@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Контекстная диаграмма C4: Система Бронирования Отелей

Person(guest, "Гость", "Ищет и бронирует отели, управляет бронированиями, оставляет отзывы")
Person(hotelier, "Отельер", "Управляет информацией об отеле, номерами, тарифами и бронированиями")
Person(admin, "Администратор", "Модерирует контент, управляет отелями, анализирует статистику")
Person(partner, "Партнер/Агентство", "Интегрирует спецпредложения и акции")
Person(reception, "Менеджер ресепшена", "Подтверждает заезды/выезды, отмечает факт проживания")
Person(anon_user, "Анонимный пользователь", "Ищет отели без регистрации")

System(hotel_booking_system, "Система Бронирования Отелей", "Централизованная система поиска, бронирования и управления проживанием в отелях")

System_Ext(payment_gateway, "Платежный шлюз", "Внешняя система обработки онлайн-платежей")
System_Ext(yandex_maps, "Яндекс.Карты", "Картографический сервис для отображения локаций")
System_Ext(gosuslugi, "Госуслуги", "Система идентификации пользователей (возможная интеграция)")
System_Ext(mvd, "МВД РФ", "Передача данных о проживающих для миграционного учета")
System_Ext(email_sms, "Email провайдер / SMS шлюз", "Внешние системы, обеспечивающие отправку Email, SMS")
System_Ext(hotel_pms, "PMS системы отелей", "Синхронизация данных о доступности номеров")

Rel(guest, hotel_booking_system, "Ищет отели, бронирует номера, управляет бронированиями")
Rel(hotelier, hotel_booking_system, "Управляет отелем, тарифами, бронированиями и отзывами")
Rel(admin, hotel_booking_system, "Модерирует, управляет системой, анализирует")
Rel(partner, hotel_booking_system, "Настраивает спецпредложения и акции")
Rel(reception, hotel_booking_system, "Подтверждает заезды, отмечает выезды")
Rel(anon_user, hotel_booking_system, "Просматривает отели без бронирования")

Rel(hotel_booking_system, payment_gateway, "Выполняет онлайн-оплаты бронирований")
Rel(hotel_booking_system, yandex_maps, "Отображает локации отелей на картах")
Rel(hotel_booking_system, gosuslugi, "Верификация пользователей (опционально)")
Rel(hotel_booking_system, mvd, "Передает данные гостей для миграционного учета")
Rel(hotel_booking_system, email_sms, "Позволяют отправлять уведомления пользователям")
Rel(hotel_booking_system, hotel_pms, "Позволяет интегрироваться с системой управления других отелей")

Rel_L(guest, hotelier, "Оставляет отзывы об отеле")
Rel_R(hotelier, guest, "Отвечает на отзывы гостей")

@enduml